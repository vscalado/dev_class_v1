# Arquivo para garantir a build do frontend no Render.com

# Use uma versão específica do Node
engines:
  node: "16.x"

# Scripts personalizados para garantir uma build limpa
scripts:
  # Limpa o cache do npm antes da instalação
  prebuild: "npm cache clean --force"
  # Instala as dependências com --legacy-peer-deps
  build: "npm install --legacy-peer-deps && npm run build"